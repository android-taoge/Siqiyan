<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/zhibo_title"
            android:padding="5dp"
            android:text="仿是仿仿东风扽嗨嗨很很好仿是 个啊 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_below="@+id/zhibo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/zhibo_shoucang"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/shoucang"/>

        <ImageView
            android:id="@+id/zhibo_fenxiang"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@mipmap/fenxiang"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"/>
        </RelativeLayout>
</RelativeLayout>
